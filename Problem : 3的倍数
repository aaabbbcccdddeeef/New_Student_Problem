#include<stdio.h>
    int main(){
        do{
            int N;
            scanf("%d",&N);
            if (N == 0){
                break;
            }
            int cnt = 0;
            int a;
            for (int i = 0;i < N;i++){
                scanf("%d",&a);
                if (a % 3 == 0){
                    cnt++;
                }
            }
            printf("%d\n",cnt);
        }while (1);
        return 0;
    }
